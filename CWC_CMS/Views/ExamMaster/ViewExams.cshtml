@model CWC_CMS.Models.ExamMasterModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutView_bak2.cshtml";
}

<style type="text/css">
    .drop {
        background-color: #fcfcfd;
        border-color: #bdc3d1;
        border-radius: 2px;
        height: 38px;
        outline: none;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {

        $('.select2').select2();
    });
</script>
<link href="~/css/site.css" rel="StyleSheet" />


@using (Html.BeginForm("Create", "ExamMaster", FormMethod.Post, new { id = "basicForm", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <!-- panel -->
        <div class="panel panel-primary">
            <div class="panel-heading">

                <table style="width:100%; background-color:transparent">
                    <tr>
                        <td>
                            @if (Model != null)
                            {
                                <h4 class="panel-title">Edit Exams</h4>
                            }
                            else
                            {
                                <h4 class="panel-title">Add Exams</h4>

                            }
                        </td>

                        <td style="text-align:right">
                            @Html.ActionLink("Back  ", "index", "ExamMaster", new { @class = "btn btn-default btn-quirk" })
                        </td>
                    </tr>
                </table>
            </div>
            <div class="panel-body">
                <h4 class="panel-title" style="text-align:center">Exam Master</h4>
                <div style="border: dotted 1px">
                    <br />




                    <div class="form-group">
                        <label class="col-sm-2 control-label">Exam Name<span class="text-danger">*</span></label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.ExamName, new { @class = "form-control", placeholder = "Type here...", readOnly = true })
                            <span class="col-sm-3 control-label" style="color:red;margin-right:-10px">   </span>
                            @Html.HiddenFor(model => model.ExamID, new { required = false })

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
    <!-- End of panel -->
}


<script src="~/CssJs/dtjs.js"></script>